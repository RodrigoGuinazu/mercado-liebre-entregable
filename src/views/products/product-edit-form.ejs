<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('../partials/head', {title: 'Editando: ' + '¿?'}) %>
<body>
	<!-- Header -->
	<%- include('../partials/headerNavbar') %>
	<!-- /Header -->

	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Estás editando: <i><%= productToEdit.title %></i></h2>
			</div>
		</div>
		<%- include('../partials/errors') %>
		<div class="col-12">
			<form action="/products/<%= refill.id %>?_method=PATCH" method="POST" enctype="multipart/form-data">
				<div class="row product-detail">
					<div class="col-12 col-md-6">
						<label for="title" class="form-label">Nombre del producto:</label>
						<input type="text" id="title" name="title" placeholder="Ej: Zapatillas Reebok" class="form-input" value="<%= refill.title %>">
					</div>
					<div class="col-12 col-md-6">
						<label for="price" class="form-label">Precio del producto:</label>
						<input type="text" id="price" name="price" placeholder="Ej: 5678" class="form-input" value="<%= refill.price %>">
					</div>
					<div class="col-12 col-md-6">
						<label for="photo" class="form-label">Imagen:</label>
						<input type="file" id="photo" name="photo" class="form-input-img" value="<%= refill.photo %>">
					</div>
					<div class="col-12 col-md-6">
						<label for="brand" class="form-label">Marca:</label>
						<select name="brand" id="brand" class="form-input">
							<option value="<%= refill.brand_id %>"><%= brands.name %></option> <!-- Mostrar la marca actual -->
							<% brands.forEach(brand => {%>
								<option value="<%= brand.id %>"><%= brand.name %></option>
							<% }); %> 
						</select>
					</div>
					<div class="col-12 col-md-6">
						<label for="category" class="form-label">Categoría:</label>
						<select name="category" id="category" class="form-input" value="<%= refill.category_id %>">
							<option value="<%= refill.category_id %>"><%= categories.name %></option> <!-- Mostrar la categoria actual -->
						</select>
					</div>
					<div class="col-12 col-md-6">
						<label for="stock" class="form-label">Stock:</label>
						<input type="number" id="stock" name="stock" class="form-input" value=<%= refill.stock %>>
					</div>
					<div class="col-12">
						<label for="description" class="form-label">Descipción:</label>
						<textarea name="description" id="description" class="form-input"><%= refill.description %></textarea>
					</div>
					<div class="col-12">
						<button type="submit" class="buy-now-button">Guardar producto</button>
					</div>
				</div>
			</form>
		</div>

	</div>
	<!-- /todos los productos -->

	<!-- footer -->
	<%- include('../partials/footer') %>
	<!-- /footer -->
</body>	
</html>